{
  "name": "litestar-website",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "NODE_OPTIONS='--max-old-space-size=8192' nuxt build",
    "generate": "NODE_OPTIONS='--max-old-space-size=8192' nuxt generate",
    "generate-github": "NODE_OPTIONS='--max-old-space-size=8192' nuxt generate --preset github_pages",
    "generate-verbose": "NODE_OPTIONS='--max-old-space-size=8192' nuxt generate --logLevel=verbose",
    "dev": "nuxt dev",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "lint": "oxlint . --fix && prettier --write . --log-level warn",
    "prepare": "husky",
    "test-unit": "npx vitest --project unit",
    "test-nuxt": "npx vitest --project nuxt",
    "test-all": "npx vitest",
    "update-stats": "npx tsx scripts/update-stats.ts"
  },
  "dependencies": {
    "@iconify-json/lucide": "^1.2.73",
    "@iconify-json/simple-icons": "^1.2.58",
    "@nuxt/content": "^3.8.0",
    "@nuxt/image": "^2.0.0",
    "@nuxt/scripts": "^0.13.0",
    "@nuxt/ui": "^4.1.0",
    "@nuxtjs/google-fonts": "^3.2.0",
    "@nuxtjs/html-validator": "^2.1.0",
    "@nuxtjs/mdc": "^0.18.2",
    "@unhead/vue": "^2.0.19",
    "@vue-flow/background": "^1.3.2",
    "@vue-flow/core": "^1.47.0",
    "@vue-flow/node-toolbar": "^1.1.1",
    "@vue/compiler-sfc": "^3.5.24",
    "@vueuse/components": "^14.0.0",
    "@vueuse/core": "^14.0.0",
    "@vueuse/nuxt": "^14.0.0",
    "better-sqlite3": "^12.4.1",
    "motion-v": "^1.7.4",
    "nuxt": "^4.2.1",
    "nuxt-og-image": "^5.1.12",
    "remark-gfm": "^4.0.1",
    "scule": "^1.3.0",
    "sitemap": "^9.0.0",
    "tailwindcss": "^4.1.17",
    "typescript": "^5.9.3",
    "ufo": "^1.6.1",
    "vue": "^3.5.24",
    "vue-router": "^4.6.3",
    "zod": "^4.1.12"
  },
  "packageManager": "pnpm@10.15.0",
  "devDependencies": {
    "@nuxt/test-utils": "^3.20.1",
    "@prettier/plugin-oxc": "^0.0.4",
    "@shikijs/transformers": "^3.15.0",
    "@vue/test-utils": "^2.4.6",
    "happy-dom": "^20.0.10",
    "husky": "^9.1.7",
    "nuxt-content-twoslash": "^0.1.2",
    "oxlint": "^1.28.0",
    "prettier": "^3.6.2",
    "shiki": "^3.15.0",
    "twoslash": "^0.3.4",
    "vitest": "^4.0.8"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "better-sqlite3",
      "esbuild",
      "rolldown",
      "sharp"
    ],
    "ignoredBuiltDependencies": [
      "@parcel/watcher",
      "puppeteer",
      "vue-demi"
    ]
  },
  "prettier": {
    "plugins": [
      "@prettier/plugin-oxc"
    ],
    "tabWidth": 2,
    "useTabs": false,
    "singleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": true,
    "semi": false,
    "arrowParens": "always",
    "endOfLine": "lf"
  }
}

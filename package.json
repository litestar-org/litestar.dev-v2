{
  "name": "litestar-website",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "NODE_OPTIONS='--max-old-space-size=8192' nuxt build",
    "generate": "NODE_OPTIONS='--max-old-space-size=8192' nuxt generate",
    "generate-verbose": "NODE_OPTIONS='--max-old-space-size=8192' nuxt generate --logLevel=verbose",
    "dev": "nuxt dev",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "lint": "oxlint . --fix && prettier --write . --log-level warn"
  },
  "dependencies": {
    "@iconify-json/lucide": "^1.2.67",
    "@iconify-json/simple-icons": "^1.2.51",
    "@nuxt/content": "3.6.3",
    "@nuxt/image": "1.11.0",
    "@nuxt/scripts": "0.11.10",
    "@nuxt/test-utils": "3.19.2",
    "@nuxt/ui": "4.0.0-alpha.1",
    "@nuxtjs/google-fonts": "^3.2.0",
    "@nuxtjs/html-validator": "^2.1.0",
    "@nuxtjs/mdc": "^0.17.4",
    "@unhead/vue": "^2.0.14",
    "@vue/compiler-sfc": "^3.5.21",
    "@vueuse/components": "^13.9.0",
    "@vueuse/core": "^13.9.0",
    "@vueuse/nuxt": "^13.9.0",
    "better-sqlite3": "^12.2.0",
    "motion-v": "^1.7.1",
    "nuxt": "^4.1.1",
    "nuxt-og-image": "^5.1.9",
    "remark-gfm": "^4.0.1",
    "scule": "^1.3.0",
    "sitemap": "^8.0.0",
    "tailwindcss": "^4.1.13",
    "typescript": "^5.9.2",
    "ufo": "^1.6.1",
    "vue": "^3.5.21",
    "vue-router": "^4.5.1"
  },
  "packageManager": "pnpm@10.15.0",
  "devDependencies": {
    "@prettier/plugin-oxc": "^0.0.4",
    "@shikijs/transformers": "^3.12.2",
    "nuxt-content-twoslash": "^0.1.2",
    "oxlint": "^1.15.0",
    "prettier": "^3.6.2",
    "shiki": "^3.12.2",
    "twoslash": "^0.3.4"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "better-sqlite3",
      "esbuild",
      "rolldown",
      "sharp"
    ],
    "ignoredBuiltDependencies": [
      "@parcel/watcher",
      "puppeteer",
      "vue-demi"
    ],
    "overrides": {
      "vite": "npm:rolldown-vite@latest"
    }
  },
  "prettier": {
    "plugins": [
      "@prettier/plugin-oxc"
    ],
    "tabWidth": 2,
    "useTabs": false,
    "singleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": true,
    "semi": false,
    "arrowParens": "always",
    "endOfLine": "lf"
  }
}
